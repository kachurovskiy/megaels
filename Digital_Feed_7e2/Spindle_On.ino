void Spindle()
{
   if (++Spindle_Count > 750) // ~~1sec.
   {
      Spindle_Count = 0;
      if (Tacho_Count == Tacho_Count_Old) {spindle_flag = OFF;}
      else                                {spindle_flag = ON;}
      Tacho_Count_Old = Tacho_Count;
   } 
}
